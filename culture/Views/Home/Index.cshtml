@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container text-center my-5">
    <h1 class="display-4 mb-3">Welcome to Agri-Energy Connect</h1>
    <p class="lead mb-4">Empowering farmers with technology and innovation.</p>
    <p>Explore our platform to connect with farmers, manage products, and enhance agricultural practices.</p>

    <div class="row justify-content-center my-4">
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <img src="~/images/f1.jpg" alt="Agriculture Image 1" class="card-img-top img-fluid rounded" />
                <div class="card-body">
                    <h5 class="card-title">Farmers' Growth</h5>
                    <p class="card-text">Connecting farmers with the latest agricultural technology.</p>
                    <a href="/FarmerDashboard" class="btn btn-primary">Go to Farmer Dashboard</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <img src="~/images/fw2.jpg" alt="Agriculture Image 2" class="card-img-top img-fluid rounded" />
                <div class="card-body">
                    <h5 class="card-title">Employee Management</h5>
                    <p class="card-text">Manage farmers and products efficiently with our tools.</p>
                    <a href="/EmployeeDashboard" class="btn btn-success">Go to Employee Dashboard</a>
                </div>
            </div>
        </div>
    </div>
</div>
